{
  "canisters": {
    "api": {
      "main": "backend/api/main.mo",
      "type": "motoko"
    },
    "internet_identity": {
      "candid": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity.did",
      "frontend": {},
      "remote": {
        "id": {
          "ic": "rdmx6-jaaaa-aaaaa-aaadq-cai"
        }
      },
      "type": "custom",
      "wasm": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity_dev.wasm.gz"
    },
    "frontend": {
      "dependencies": [
        "api"
      ],
      "source": [
        "frontend/dist"
      ],
      "build": [
        "cp ./.env ./frontend/.env && npm run build --workspaces --if-present"
      ],
      "type": "assets",
      "workspace": "frontend"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "provider": ["https://mainnet.dfinity.network"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": "cat mops.sources"
    }
  },
  "output_env_file": ".env",
  "replica": {
    "subnet_type": "application"
  }
}